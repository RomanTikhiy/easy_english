<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileClient.Views.WordPageDetail"
             Title="Edit word item">
    <ContentPage.Content>
        <StackLayout Margin="45, 10, 45, 10">

            <Editor Placeholder="Text:" Grid.Row="0" Grid.Column="1" Text="{Binding Value}"></Editor>

            <Picker Title="Translate from:" ItemsSource="{Binding Languages}" SelectedItem="{Binding LanguageFromString}"></Picker>

            <Picker Title="Translate to:" ItemsSource="{Binding Languages}" SelectedItem="{Binding LanguageToString}"></Picker>

            <Button Text="Translate" Command="{Binding TranslateCommand}" CornerRadius="20" BackgroundColor="#6666ff" TextColor="White"></Button>

            <Button Text="Save" Command="{Binding SaveCommand}" CornerRadius="20" BackgroundColor="#20B2AA" TextColor="White"></Button>

            <Label FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black" Text="{Binding Translation}"></Label>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>